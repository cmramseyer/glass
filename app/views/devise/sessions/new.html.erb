

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <h1>Sign in</h1>


  <div>
    <%= f.text_field :username, autofocus: true, placeholder: 'Username', autocomplete: "Username", class: 'form-control' %>
  </div>

  <div>
    <%= f.password_field :password, placeholder: 'Password', autocomplete: "current-password", class: 'form-control' %>
  </div>

  

  <div>
    

    
  </div>

  <div class="row">
    <div class="col-xs-6">
      <div class="center-block">

        <%= f.submit "Log in", class: 'btn btn-default' %>
      </div>
    </div>

    <div class="col-xs-6">
      <div class="center-block">
        <% if devise_mapping.rememberable? -%>
          <div class="checkbox">
            <label>
              <%= f.check_box :remember_me, class: 'form-control flat', checked: 'checked' %>
              Remember me    
            </label>
          </div>
        <% end -%>
      </div>
    </div>
  </div>

   <div class="clearfix"></div>

  <div class="separator">
    <div>
      <h1><i class="fa fa-glass"></i> Glass Demo App</h1>
      <p>Request access to <%= mail_to("cmramseyer@gmail.com") %></p>
    </div>
  </div>

<% end %>

<%= render "devise/shared/links" %>
