<% if tracking.work_logs.any? %>
  <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target=".modal-log-tracking-<%= tracking.id %>">View Log</button>

  <div class="modal fade modal-log-tracking-<%= tracking.id %>" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span>
          </button>
          <h4 class="modal-title" id="myModalLabel">Work Log</h4>
        </div>
        <div class="modal-body">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>User</th>
                <th>Qty.</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
              <% tracking.work_logs.each do |work_log| %>
                <tr>
                  <td><%= work_log.user_username %></td>
                  <td><%= work_log.quantity %></td>
                  <td><%= work_log.created_at.normal_format %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>

      </div>
    </div>
  </div>
<% end %>